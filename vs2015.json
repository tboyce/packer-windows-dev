{
  "builders": [
    {
      "type": "virtualbox-iso",
      "iso_url": "./iso/en_windows_8.1_enterprise_with_update_x64_dvd_6054382.iso",
      "iso_checksum_type": "md5",
      "iso_checksum": "115d7c4203417e52c09d16b50043b10d",
      "headless": false,
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "4h",
      "shutdown_command": "shutdown /s /t 10 /f /c \"Packer Shutdown\"",
      "guest_os_type": "Windows8_64",
      "disk_size": 61440,
      "floppy_files": [
        "./answer_files/81/Autounattend.xml",
        "./answer_files/vs/AdminDeployment.xml",
        "./config/oracle-cert.cer",
        "./scripts/openssh.ps1",
        "./scripts/chocolatey.bat",
        "./scripts/microsoft-updates.bat",
        "./scripts/win-updates.ps1"
      ],
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "4096"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "4"
        ],
        [
          "storagectl",
          "{{.Name}}",
          "--name",
          "SataController",
          "--add",
          "sata",
          "--controller",
          "IntelAHCI"
        ],
        [
          "storageattach",
          "{{.Name}}",
          "--storagectl",
          "SataController",
          "--port",
          "0",
          "--device",
          "0",
          "--type",
          "dvddrive",
          "--medium",
          "./iso/en_visual_studio_enterprise_2015_x86_x64_dvd_6850497.iso"
        ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "./config",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "remote_path": "/tmp/script.bat",
      "execute_command": "{{.Vars}} cmd /c C:/Windows/Temp/script.bat",
      "scripts": [
        "./scripts/vm-guest-tools.bat"
      ]
    },
    {
      "type": "shell",
      "remote_path": "/tmp/script.ps1",
      "execute_command": "{{.Vars}} powershell -File c:/Windows/Temp/script.ps1",
      "scripts": [
        "./scripts/enable-rdp.ps1",
        "./scripts/disable-updates.ps1",
        "./scripts/remove-metro-apps.ps1",
        "./scripts/install-vs.ps1",
        "./scripts/install-packages.ps1",
        "./scripts/pin-tools.ps1",
        "./scripts/cleanup.ps1",
        "./scripts/restart.ps1"
      ]
    },
    {
      "type": "shell",
      "remote_path": "/tmp/script.bat",
      "execute_command": "{{.Vars}} cmd /c C:/Windows/Temp/script.bat",
      "pause_before": "30s",
      "scripts": [
        "./scripts/dism.bat",
        "./scripts/compact.bat"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "vs2015-{{.Provider}}.box",
      "vagrantfile_template": "vagrantfile-windows.template"
    }
  ]
}
